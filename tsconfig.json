{
  "compilerOptions": {
    /* ---- target & module ---- */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* ---- type safety ---- */
    "strict": true,

    /* ---- quality-of-life ---- */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ---- output dir ---- */
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
